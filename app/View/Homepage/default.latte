{block content}
    <h1 n:block="title">Můj blogíseQ</h1>

    <a n:href="Post:create" n:if="$user->loggedIn">Napsat nový příspěvek</a>

    {foreach $posts as $post}
	    <div class="post">

			<h2><a n:href="Post:show $post->id">{$post->title}</a></h2>
	        
	        <div class="date">{$post->created_at|date:'F j, Y'}</div>

	        <div>{$post->content}</div>

	    </div>
    {/foreach}

{/block}
